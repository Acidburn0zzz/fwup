#!/bin/sh

#
# Test out progress reporting on a firmware write
#

. ./common.sh

cat >$CONFIG <<EOF
file-resource 1.bin {
	host-path = "${WORK}/1K.bin"
}
file-resource 2.bin {
	host-path = "${WORK}/1K.bin"
}
file-resource 3.bin {
	host-path = "${WORK}/1K.bin"
}
file-resource 4.bin {
	host-path = "${WORK}/1K.bin"
}

task complete {
	on-resource 1.bin { raw_write(0) }
	on-resource 2.bin { raw_write(0) }
	on-resource 3.bin { raw_write(0) }
	on-resource 4.bin { raw_write(0) }
}
EOF

$FWUP -c -f $CONFIG -o $FWFILE

$FWUP -a -d $IMGFILE -i $FWFILE -t complete | $SED 's/\r/./g' > $WORK/actual_output.txt

cat >$WORK/expected_output.txt <<EOF
.  0%. 25%. 50%. 75%. 99%.100%
EOF
diff $WORK/expected_output.txt $WORK/actual_output.txt

